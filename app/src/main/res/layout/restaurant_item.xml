<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:orientation="vertical"
                                   android:layout_width="300dp"
                                   android:layout_margin="@dimen/normal_margin"
                                   app:cardBackgroundColor="@color/white"
                                   app:cardCornerRadius="@dimen/corner_radius"
                                   app:cardMaxElevation="15dp"
                                   app:cardElevation="10dp"
                                   android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">


        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:textAppearance="@style/TextView.Small"
                  android:id="@+id/rating"
                  android:text="4.0"
                  android:textColor="@color/dark_grey"
                  android:drawableStart="@drawable/ic_star"
                  app:layout_constraintTop_toBottomOf="@+id/name"
                  android:gravity="center_vertical|end"
                  android:drawablePadding="@dimen/small_padding"
                  android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:textAppearance="@style/TextView.Medium"
                  android:id="@+id/sub_name"
                  app:layout_constraintStart_toStartOf="parent"
                  android:text="Asta La Vista"
                  android:textColor="@color/dark_grey"
                  app:layout_constraintTop_toBottomOf="@+id/name"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toStartOf="@+id/rating"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:textAppearance="@style/TextView.Large"
                  android:id="@+id/name"
                  app:layout_constraintStart_toStartOf="parent"
                  android:text="Asta La Vista"
                  android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:textColor="@color/colorPrimaryDark"
                  android:fontFamily="@font/opensans_bold"
                  android:maxLines="1"
                  android:ellipsize="end"
                  app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginTop="8dp"
                  android:layout_marginStart="8dp"/>
        <ImageView android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:src="@drawable/restaurant"

                   app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                   app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                   android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                   android:id="@+id/imageView"/>
        <TextView android:layout_width="80dp" android:layout_height="35dp"
                  android:background="@drawable/rounded_rectangle"
                  android:backgroundTint="@color/colorPrimary"
                  android:rotation="-10"
                  android:text="Top 3"
                  android:textColor="@color/white"
                  android:scaleX="1.4"
                  android:scaleY="1.4"
                  android:gravity="center"
                  android:fontFamily="@font/opensans_regular"
                  android:id="@+id/top_3_badge"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toTopOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>