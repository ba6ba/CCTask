<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   app:cardBackgroundColor="@color/white"
                                   app:cardElevation="10dp"
                                   app:cardMaxElevation="15dp"
                                   android:minWidth="150dp"
                                   app:cardCornerRadius="@dimen/small_corner_radius"
                                   android:layout_width="150dp"
                                   android:layout_margin="@dimen/small_margin"
                                   android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">


        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:textAppearance="@style/TextView.Medium"
                  android:id="@+id/status"
                  app:layout_constraintStart_toStartOf="parent"
                  android:text="sunny"
                  android:textColor="@color/colorPrimaryDark"
                  android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginStart="8dp"
                  app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/temp" android:layout_marginTop="8dp"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:textAppearance="@style/TextView.Large"
                  android:id="@+id/temp"
                  app:layout_constraintStart_toStartOf="parent"
                  android:text="32"
                  android:textColor="@color/dark_grey"
                  android:textSize="@dimen/v_v_large_text_size"
                  android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginStart="8dp"
                  android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/_date"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:textAppearance="@style/TextView.Small"
                  android:id="@+id/_date"
                  app:layout_constraintStart_toStartOf="parent"
                  android:text="32"
                  android:textColor="@color/dark_grey"
                  android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginTop="8dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>