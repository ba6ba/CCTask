<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextView.Background.Rounded.Blue" parent="Base.Widget.AppCompat.TextView">
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>


    <style name="TextView.Background.Half.Rounded.Pink" parent="Base.Widget.AppCompat.TextView">
        <item name="android:background">@drawable/half_rounded_rectangle</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TextView.Large" parent="Base.Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Small" parent="Base.Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Medium" parent="Base.Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
